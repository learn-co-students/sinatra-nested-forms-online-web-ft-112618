<h1>Pirates</h1>
<div class="pirate">
  <p>Name: <%= @pirate.name %></p>
	<p>Weight: <%= @pirate.weight %></p>
	<p>Height: <%= @pirate.height %></p>
  </div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Topic: <%= ship.type %></p>
    <p>Topic: <%= ship.booty %></p><br>
  </div><br>
<% end %>
